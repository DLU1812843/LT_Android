<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <Button
        android:id="@+id/btnHePhuongTrinh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Giai he phuong trinh">

    </Button>
    <Button
        android:id="@+id/btnTinhToan"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:text="Phép tính">
    </Button>
    <Button
        android:id="@+id/btnLuongGiac"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Phương trình bậc nhất 1 ẩn">
    </Button>
    <Button
        android:id="@+id/btnChuyenDoi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Chuyển đổi đơn vị">
    </Button>
    <Button
        android:id="@+id/btnChuyenDoiHeSo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Chuyển đổi hệ số">
    </Button>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>